{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center text-capitalize">Room Detail</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('room_index') }}">Room LIST</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Course</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						{{ room.name }}
					</td>
                    <td>
					{% for c in room.course %}
							<a href="{{ path('course_detail', {'id': c.id }) }}">
								{{ c.name }}
							</a>
							<br>
						{% endfor %}
					</td>
					
					<td>
						<a class="btn btn-info" href="{{ path('room_edit', {'id': room.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('room_delete', {'id': room.id}) }}" onclick="return confirm('Are you sure to delete this course ?')">DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
